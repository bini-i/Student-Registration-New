<div class="table-responsive fs-5">
  <h5 class="text-primary py-3"><%= "#{params[:registration][:class_year].humanize.upcase} #{params[:registration][:semester].humanize.upcase} COURSES" %></h5>
  <table class="table table-sm table-striped align-middle">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Course Name</th>
        <th scope="col">Credit Hour</th>
        <th scope="col">Ects</th>
        <th scope="col">Class Year</th>
        <th scope="col">Semester</th>
      </tr>
    </thead>
    <tbody>
      <% @department.courses.where(class_year: params[:registration][:class_year], semester: params[:registration][:semester]).each_with_index do |course, index| %>
        <tr class="" style="height: 50px">
          <td><%= index+1 %></td>
          <td><%= course.course_name %></td>
          <td><%= course.credit_hour %></td>
          <td><%= course.ects %></td>
          <td><%= course.class_year %></td>
          <td><%= course.semester %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


