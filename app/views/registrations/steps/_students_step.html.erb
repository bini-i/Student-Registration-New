 <div class="table-responsive fs-5" data-controller="checkbox-select-all">
  <h5 class="text-primary py-3"><%= "#{session[:registration_params]["class_year"].humanize.upcase} #{session[:registration_params]["semester"].humanize.upcase} students" %></h5>
  
  <table class="table table-sm table-striped align-middle">
    <thead>
      <tr>
        <th scope="col">
            <%= check_box_tag "course_all", nil, nil, { data: { checkbox_select_all_target: "parent", action: "change->checkbox-select-all#toggleChildren" }} %>
        </th>
        <th scope="col">No.</th>
        <th scope="col">First Name</th>
        <th scope="col">Father Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Section</th>
        <th scope="col">Class year</th>
        <th scope="col">Semester</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
      <% @active_students.each_with_index do |student, index| %>
        <tr class="" style="height: 50px">
          <td>
            <%= check_box_tag "student_id[]", student.id, nil, { multiple: true, data: { checkbox_select_all_target: "child", action: "change->checkbox-select-all#toggleParent" }} %>
          </td>
          <td><%= index+1 %></td>
          <td><%= student.first_name %></td>
          <td><%= student.father_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.section %></td>
          <td><%= student.class_year %></td>
          <td><%= student.semester %></td>
          <td><%= student.status %></td>
        </tr>
      <% end %>
    </tbody>    
  </table>
</div>

<% if @active_students.empty? %>
  <%= render partial: "registrations/steps/placeholder" %>
<% end %>