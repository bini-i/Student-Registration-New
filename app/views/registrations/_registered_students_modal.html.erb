<%= turbo_frame_tag "turbomodal", target: :_top do %>
    <div class="modal fade" data-controller="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Registered Students...</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                   <div class="table-responsive fs-5">
                        <table class="table table-sm table-striped align-middle">
                            <thead>
                                <tr>
                                    <th scope="col">No.</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Section</th>
                                </tr>
                            </thead>
                            <tbody class="accordion" id="accordionExample">
                                <% registered_students.each_with_index do |student, index| %>
                                    <tr class="" style="height: 50px">
                                        <td><%= index+1 %></td>
                                        <td><%= student.full_name %></td>
                                        <td><%= student.section %></td>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>     
                </div>
                <%# <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div> %>
            </div>
        </div>
    </div>
<% end %>
