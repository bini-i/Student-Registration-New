<div class="toast-container position-fixed top-0 end-0 p-3 border-0" role="alert" aria-live="assertive" aria-atomic="true">
  <% flash.each do |type, message| %>
      <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-controller="flash" <%= "data-bs-autohide=false" if type == "password" %>>
        <div class="toast-header">
          <strong class="me-auto"><%= type %></strong>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          <strong> <pre> <%= message %> </pre> </strong>
        </div>
      </div>
  <% end %>
</div>
