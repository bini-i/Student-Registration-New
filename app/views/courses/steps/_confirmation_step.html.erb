<table class="table table-info">
    <tbody>
        <tr>
            <th>Course Name</th>
            <td> <%= @course.course_name %> </td>
        </tr>

        <tr>
            <th>Credit hour</th>
            <td> <%= @course.credit_hour %> </td>
        </tr>
        
        <tr>
            <th>Ects</th>
            <td> <%= @course.ects %> </td>
        </tr>        
        
        <tr>
            <th>Class Year</th>
            <td> <%= @course.class_year %> </td>
        </tr>    

        <tr>
            <th>Semester</th>
            <td> <%= @course.semester %> </td>
        </tr>    

        <tr>
            <th>Prerequisites</th>
            <td>
            <table>
                <tbody>
                    <% session[:prerequisite].each do |course| %>
                        <tr>
                            <td><%= course %></td>
                        </tr>
                    <% end %>
                <tbody>
            </table>
            </td>
        </tr>
    </tbody>
</table>