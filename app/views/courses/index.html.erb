<div class="d-flex mb-4">
  <h2 class="font-weight-normal"><%= @department.dept_name %>'s courses</h2>
  
  <%= link_to "Add course", new_department_course_path(@department), class: "btn btn-primary btn-sm d-inline-flex align-items-center ms-auto" %>
</div>

<p style="color: green"><%= notice %></p>

<div class="mt-3 mb-4">
  <%= link_to departments_path, class: "link-underline link-underline-opacity-0" do %>
    <i class="bi bi-arrow-left"></i>
    <span class="fs-5">Back to departments</span>
  <% end %>
</div>

<div class="table-responsive fs-5">
  <table class="table table-sm table-striped align-middle">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Course Name</th>
        <th scope="col">Credit hour</th>
        <th scope="col">Ects</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody class="accordion" id="accordionExample">
      <% @courses.each_with_index do |course, index| %>
        <tr class="" style="height: 50px">
          <td><%= index+1 %></td>
          <td><%= course.course_name %></td>
          <td><%= course.credit_hour %></td>
          <td><%= course.ects %></td>
          <td>
            <%= link_to "Edit", edit_department_course_path(@department, course), class: "btn btn-outline-primary btn-sm" %>
            
            <button class = "btn btn-outline-primary btn-sm" class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=index%>" aria-expanded="false" aria-controls="collapse<%=index%>" >Prerequisites</button>

            <%= link_to "Delete", course_destroy_form_path(@department, course), data: {'turbo-method': :delete, 'turbo-confirm': "Are you sure you want to delete '#{course.course_name}' course? This action can NOT be undone!", 'turbo-controller': "turbo"}, class: "btn btn-outline-danger btn-sm" %>
          </td>
        </tr>
        <tr id="collapse<%=index%>" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
            <td colspan="5">
              <% course.prerequisite_courses.each do |prerequisite_course, index| %> 
              <ul class="list-group">
                <li class="list-group-item list-group-item-info">
                  <%= prerequisite_course.course_name %>
                </li>
              </ul>
              <% end %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @courses.empty? %>
  <%= render partial: "placeholder" %>
<% end %>