<div class="d-flex">
  <div class="d-flex w-100">
    <h4 class="font-weight-normal"><%= @department.dept_name %> Department</h4>
    <div class="d-flex mx-3 flex-grow-1">
      <div class="dropdown dropend">
        <span class="badge rounded-pill text-bg-info border-0 btn btn-secondary dropdown-toggle px-3 py-2" type="button" data-bs-toggle="dropdown" aria-expanded="false"><%= params[:year] ? "#{params[:year]} entry" : "ALL Students" %></span>
        <ul class="dropdown-menu">
            <li>
              <%= link_to "ALL", department_students_path(@department), class: "dropdown-item" %>
            </li>
            <% @admission_years.each do |year| %>
              <li>
                <%= link_to "#{year} entry", year_students_path(@department, year), class: "dropdown-item" %>
              </li>
            <% end %>
        </ul>

        <span class="badge rounded-pill text-bg-info border-0 btn btn-secondary dropdown-toggle px-3 py-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">options</span>
        <ul class="dropdown-menu">
            <li>
              <%= link_to "Register new semester", department_students_path(@department), class: "dropdown-item" %>
            </li>
        </ul>
      </div>

      <% if params[:year] %>
        <ul class="nav nav-tabs mb-3 ms-auto" id="myTab0" role="tablist">
            <li class="nav-item d-grid align-items-center" role="presentation">
              <%= link_to "ALL", year_students_path(@department, params[:year]), class: "link-underline link-underline-opacity-0 px-2 py-2 #{"text-primary-emphasis bg-warning" unless params[:section]}", type: "button", role: "tab", "aria-selected": "true" %>
            </li>
          <% @sections.each do |section| %>
            <li class="nav-item d-grid align-items-center" role="presentation">
              <%= link_to "Section #{section}", section_students_path(@department, params[:year], section), class: "link-underline link-underline-opacity-0 px-2 py-2 #{"text-primary-emphasis bg-warning" if params[:section] == section}", type: "button", role: "tab", "aria-selected": "true" %>
            </li>
          <% end %>
        </ul>
      <% end %>

    </div>
  </div>

  <%# = link_to "Add student", new_department_student_path(@department), class: "btn btn-primary btn-sm d-inline-flex align-items-center ms-auto" %>
</div>

<p style="color: green"><%= notice %></p>

<div class="mt-3 mb-4">
  <%= link_to departments_path, class: "link-underline link-underline-opacity-0" do %>
    <i class="bi bi-arrow-left"></i>
    <span class="fs-5">Back to departments</span>
  <% end %>
</div>

<div class="table-responsive fs-5">
  <table class="table table-sm table-striped align-middle">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Name</th>
        <th scope="col">Class Year</th>
        <th scope="col">Semester</th>
        <th scope="col">Admission Year</th>
        <th scope="col">Section</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody class="accordion" id="accordionExample">
      <% @students.each_with_index do |student, index| %>
        <tr class="" style="height: 50px">
          <td><%= index+1 %></td>
          <td><%= student.full_name %></td>
          <td><%= student.class_year %></td>
          <td><%= student.semester %></td>
          <td><%= student.admission_year %></td>
          <td><%= student.section %></td>
          <td>
            <%= link_to "Edit", edit_department_student_path(@department, student), class: "btn btn-outline-primary btn-sm" %>
            <%= link_to "Detail", department_student_path(@department, student), class: "btn btn-outline-primary btn-sm" %>
          </td>
        </tr>

      <% end %>
    </tbody>
  </table>
</div>

<% if @students.empty? %>
  <%= render partial: "placeholder" %>
<% end %>