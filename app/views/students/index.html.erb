<div class="d-flex">
  <div class="d-flex w-100">
    <h4 class="font-weight-normal"><%= @department.dept_name %> Department</h4>
    <div class="d-flex px-4 flex-grow-1">
    
      <%= bootstrap_form_with(url: url_for, method: :get, :html => {:class => "w-100"}) do |form| %>
        <div class="row g-3">
          
          <div class="col-md-3">
              <%= form.select :admission_year, @admission_years.map{|admission_year| [admission_year, admission_year]}, {:prompt => "admission year", :hide_label => true}, class:"form-control" %>
          </div>

          <div class="col-md-3">
              <%= form.select :class_year, @class_years.map{|class_year| [class_year, class_year]}, {:prompt => "class year", :hide_label => true}, class:"form-control" %>
          </div>

          <div class="col-md-2">
              <%= form.select :section, @sections.map{|sections| [sections, sections]}, {:prompt => "section", :hide_label => true}, class:"form-control" %>
          </div>

          <div class="col-md-2">
            <%= form.submit "Filter", class: "btn btn-primary" %>
          </div>
          
        </div>
        
      <% end %>

