<div class="d-flex">
  <div class="d-flex w-100">
    <h4 class="font-weight-normal"><%= @department.dept_name %> Department</h4>
    <div class="d-flex px-4 flex-grow-1 justify-content-between">
      
      <%= bootstrap_form_with(url: url_for, method: :get, :html => {:class => ""}) do |form| %>
        <div class="row g-3">
          <div class="col-md-12">
              <%= form.select :class_year, @class_years.map{|class_year| [class_year, class_year]}, {:selected => params["class_year"], :prompt => "select class year", :hide_label => true, class: "form-control", wrapper: { class: 'm-0'} }, onchange: 'this.form.submit()' %>
          </div>
<!--
          <div class="col-md-2 d-flex align-items-center">
            <%= form.submit "Filter", class: "btn btn-sm btn-primary" %>
          </div>
-->       
          
        </div>
      <% end %>
<!--
      <div class="dropdown dropend">
        <span class="badge rounded-pill text-bg-info border-0 btn btn-secondary dropdown-toggle px-3 py-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">options</span>
        <ul class="dropdown-menu">
            <li>
              <%= link_to "Register new semester", new_department_registration_path(@department), class: "dropdown-item" %>
            </li>
        </ul>
      </div>
-->
      <% if request.query_string.present? %>
        <ul class="nav nav-tabs mb-3 ms-auto" id="myTab0" role="tablist">          
          <% @sections.each do |section| %>
            <li class="nav-item d-grid align-items-center" role="presentation">
              <%= link_to "Section #{section}", department_sections_index_path(:class_year => params["class_year"], :section => section), class: "link-underline link-underline-opacity-0 px-2 py-2 #{"text-primary-emphasis bg-warning" if params[:section] == section}", type: "button", role: "tab", "aria-selected": "true" %>
            </li>
          <% end %>
        </ul>
      <% end %>

    </div>
  </div>

  <%# = link_to "Add student", new_department_student_path(@department), class: "btn btn-primary btn-sm d-inline-flex align-items-center ms-auto" %>
</div>

<p style="color: green"><%= notice %></p>

<div class="mt-3 mb-4">
  <%= link_to departments_path, class: "link-underline link-underline-opacity-0" do %>
    <i class="bi bi-arrow-left"></i>
    <span class="fs-5">Back to departments</span>
  <% end %>
</div>

<div class="table-responsive fs-5">
  <table class="table table-sm table-striped align-middle">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Name</th>
        <th scope="col">Class Year</th>
        <th scope="col">Semester</th>
        <th scope="col">Admission Year</th>
        <th scope="col">Section</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody class="accordion" id="accordionExample">
      <% @students.each_with_index do |student, index| %>
        <tr class="<%= "table-info" if student.id == params["student_id"].to_i %>" style="height: 50px">
          <td><%= index+1 %></td>
          <td><%= student.full_name %></td>
          <td><%= student.class_year %></td>
          <td><%= student.semester %></td>
          <td><%= student.admission_year %></td>
          <td><%= student.section %></td>
          <td>
            <%= link_to "Change Section", change_section_path(@department, student), data: {controller: "turbo"},class: "btn btn-outline-primary btn-sm" %>
          </td>
        </tr>

      <% end %>
    </tbody>
  </table>
</div>

<% if @students.empty? %>
  <%= render partial: "placeholder" %>
<% end %>