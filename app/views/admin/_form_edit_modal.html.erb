<%= turbo_frame_tag "turbomodal", target: :_top do %>
    <div class="modal fade" data-controller="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editing user...</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                        <%= bootstrap_form_for(@user, url: admin_path(@user), remote: true, method: :patch) do |form| %>
                            <% if @user.errors.any? %>
                                <div style="color: red">
                                    <h2><%= pluralize(@User.errors.count, "error") %> prohibited this user from being saved:</h2>

                                    <ul>
                                    <% @user.errors.each do |error| %>
                                        <li><%= error.full_message %></li>
                                    <% end %>
                                    </ul>
                                </div>
                            <% end %>
                            <div>
                                <%= form.text_field :first_name %>
                            </div>

                            <div>
                                <%= form.text_field :father_name %>
                            </div>

                            <div>
                                <%= form.text_field :last_name %>
                            </div>

                            <div>
                                <%= form.email_field :email %>
                            </div>

                            <%= form.select(:role, User.roles.keys.map { |w| [w.humanize, w] }) %> 

                            <div>
                                <%= form.submit class: "btn btn-sm btn-success" %>
                            </div>
                        <% end %>
                </div>
                <%# <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div> %>
            </div>
        </div>
    </div>
<% end %>
